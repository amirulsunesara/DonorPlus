      <button type="button" style="float:right; margin-top: 5px;" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</button>

      <div class="btn-group nav top-nav">
        <!-- Bootstrap Documentation: https://getbootstrap.com/docs/4.0/components/dropdowns/ -->

        <div class="dropdown-menu dropdown-menu-right">

          <ul class="nav top-nav">
            <li class="dropdown show" style="margin-right: 56px;">

              <ul class="dropdown-menu show">
				<li><a href="/gallery/add" style="text-decoration:none;"> Donor Management</a></li>
                <li><a href="#" style="text-decoration:none;"> Notification Settings</a></li>
                <li><a href="#" style="text-decoration:none;"> Change Password</a></li>
