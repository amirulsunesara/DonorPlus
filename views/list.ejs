  </nav>

<ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/gallery/add">Add Inventories</a></li>
        <li class="breadcrumb-item active">Add</li>
    </ol>
    <h1 class="display-4">Donor Records</h1>
    <hr>
    <div class="container">
<table class="table table-striped">
    <thead>
        <tr>
            
            <th>Donor Name</th>
            <th>Address</th>
            <th>Quantity</th>
            <th>Available Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Action</th>
    
        </tr>
    </thead>
    <tbody>
        <% gallery.forEach(function(gal){ %>
            <tr>
               
                <td><%= gal.dname %></td>
                <td><%= gal.address %></td>
                <td><%= gal.quantity %></td>
                <td><%= gal.time %></td>
                <td><%= gal.start_time %></td>
                <td><%= gal.end_time %></td>
                <td>
                    <!-- <a href="/gallery/edit/<%= gal.image_uid %>" class="btn btn-primary">Edit</a> -->
                    <form class="d-inline" action="/gallery/edit" method="post">
                        <input type="hidden" name="unique_edit_ID" value='<%= gal.id %>'>
                        <input type="submit" value="Edit" class="btn btn-info edit my-2 my-sm-0">
                    </form>
                    <form class="d-inline" action="/gallery/delete" method="post">
                        <input type="hidden" name="unique_delete_ID" value='<%= gal.id %>'>
                        <input type="submit" value="Delete" class="btn btn-info delete my-2 my-sm-0">
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
</div>
</html>